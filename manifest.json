{
  "manifest_version": 2,
  "version": "0.3.1",
  "name": "转换至简体",
  "permissions": ["activeTab"],
  "optional_permissions": [
    "webNavigation",
    "<all_urls>"
  ],
  "icons": {
    "48": "a.png"
  },
  "background": {
    "scripts": [
      "convert.js"
    ]
  },
  "browser_action": {
    "default_icon": "a.png",
    "default_title": "转换至简体"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}
